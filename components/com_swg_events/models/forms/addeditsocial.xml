<?xml version="1.0" encoding="UTF-8"?>
	<form name="addeditwalk">
		<field name="id" type="hidden" />
		<fieldset name="basic" addfieldpath="/administrator/components/com_swg_events/models/fields">
			<field name="name" type="text" label="Title" maxlength="100" required="required" size="57" />
			<field name="shownormal" type="checkbox" label="Social is for current members" value="1" checked="checked" default="0" />
			<field name="shownewmember" type="checkbox" label="This is a new members' social (e.g. pub meets)" value="1" default="0" />
			<field name="date" type="calendar" label="Date" required="required" />
			<field name="starttime" type="text" label="Start time (hh:mm)" />
			<field name="endtime" type="text" label="End time (if known)" />
			<field name="newMemberStart" type="text" label="Start time - new members" />
			<field name="newMemberEnd" type="text" label="End time - new members" />
			
		</fieldset>
		
		<fieldset name="time">
			
		</fieldset>
		
		<fieldset name="timenewmembers">
			
		</fieldset>
		
		
		<fieldset name="details">
			<field name="cost" type="text" label="Cost" maxlength="200" size="57"/>
			<field name="booking" type="text" label="Booking info"  maxlength="200" size="57"/>
			<field name="location" type="textarea" label="Address (displayed on the site)" rows="4" cols="40"/>
			<field name="latLng" type="Location" label="Location" description="Click on the map to set the location" />
			<field name="description" type="textarea" label="Description" required="required" rows="6" cols="60" />
			<field name="okToPublish" type="checkbox" label="Ready to publish" value="1" default="0" />
		</fieldset>
		
		
	</form>