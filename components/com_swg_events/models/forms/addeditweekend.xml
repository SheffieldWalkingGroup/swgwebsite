<?xml version="1.0" encoding="UTF-8"?>
	<form name="addeditwalk">
		<field name="id" type="hidden" />
		<fieldset name="basic" addfieldpath="/administrator/components/com_swg_events/models/fields">
			<field name="name" type="text" label="Title" maxlength="30" required="required" size="20" />
			<field name="placeName" type="text" label="Place name" maxlength="30" required="required" size="20" />
			<field name="area" type="text" label="Area" maxlength="20" required="required" size="20" />
			<field name="latLng" type="Location" label="Location" description="Click on the map to set the location" zoom="7" />
			<field name="startdate" type="calendar" label="Start date" required="required" />
			<field name="enddate" type="calendar" label="End date" required="required" />
		</fieldset>
		
		<fieldset name="booking">
			<field name="places" type="integer" label="Number of places" first="10" last="100" step="1" default="20" />
			<field name="cost" type="text" label="Cost" maxlength="100" />
			<field name="contact" type="text" label="Contact" maxlength="100" />
			<field name="noContactOfficeHours" type="checkbox" label="No contact during office hours" value="1" default="0" />
			<field name="bookingsOpen" type="text" label="Bookings open" />
		</fieldset>
		
		<fieldset name="details">
			<field name="description" type="textarea" label="Description" required="required" rows="6" cols="60" />
			<field name="url" type="text" label="URL for more information" maxlength="100" size="57" />
			<field name="okToPublish" type="checkbox" label="OK to publish" value="1" default="0" />
			<field name="challenge" type="checkbox" label="Challenge walk" value="1" default="0" />
			<field name="swg" type="checkbox" label="SWG weekend" value="1" default="0" />
		</fieldset>
		
		
	</form>